{
	"repositories": [
		{ "type": "composer", "url": "https://composer.typo3.org/" }
	],
	"name": "typo3/cms-base-distribution",
	"description" : "TYPO3 CMS Base Distribution",
	"license": "GPL-2.0-or-later",
	"require": {
		"roave/security-advisories": "dev-master",
		"typo3/cms-backend": "9.0.*@dev",
		"typo3/cms-core": "9.0.*@dev",
		"typo3/cms-documentation": "9.0.*@dev",
		"typo3/cms-extbase": "9.0.*@dev",
		"typo3/cms-extensionmanager": "9.0.*@dev",
		"typo3/cms-filelist": "9.0.*@dev",
		"typo3/cms-fluid": "9.0.*@dev",
		"typo3/cms-frontend": "9.0.*@dev",
		"typo3/cms-install": "9.0.*@dev",
		"typo3/cms-lang": "9.0.*@dev",
		"typo3/cms-recordlist": "9.0.*@dev",
		"typo3/cms-saltedpasswords": "9.0.*@dev",
		"typo3/cms-fluid-styled-content": "9.0.*@dev",
		"typo3/cms-about": "9.0.*@dev",
		"typo3/cms-belog": "9.0.*@dev",
		"typo3/cms-beuser": "9.0.*@dev",
		"typo3/cms-cshmanual": "9.0.*@dev",
		"typo3/cms-feedit": "9.0.*@dev",
		"typo3/cms-filemetadata": "9.0.*@dev",
		"typo3/cms-form": "9.0.*@dev",
		"typo3/cms-felogin": "9.0.*@dev",
		"typo3/cms-impexp": "9.0.*@dev",
		"typo3/cms-info": "9.0.*@dev",
		"typo3/cms-indexed-search": "9.0.*@dev",
		"typo3/cms-linkvalidator": "9.0.*@dev",
		"typo3/cms-opendocs": "9.0.*@dev",
		"typo3/cms-recycler": "9.0.*@dev",
		"typo3/cms-reports": "9.0.*@dev",
		"typo3/cms-rte-ckeditor": "9.0.*@dev",
		"typo3/cms-scheduler": "9.0.*@dev",
		"typo3/cms-setup": "9.0.*@dev",
		"typo3/cms-sys-action": "9.0.*@dev",
		"typo3/cms-sys-note": "9.0.*@dev",
		"typo3/cms-t3editor": "9.0.*@dev",
		"typo3/cms-taskcenter": "9.0.*@dev",
		"typo3/cms-tstemplate": "9.0.*@dev",
		"typo3/cms-viewpage": "9.0.*@dev",
		"typo3/cms-workspaces": "9.0.*@dev",
		"helhum/typo3-console": "^5.0"
	},
	"scripts":{
		"typo3-cms-scripts": [
			"typo3cms install:fixfolderstructure"
		],
		"post-install-cmd": [
			"@typo3-cms-scripts"
		],
		"post-update-cmd": [
			"@typo3-cms-scripts"
		]
	},
	"extra": {
		"typo3/cms": {
			"cms-package-dir": "{$vendor-dir}/typo3/cms",
			"web-dir": "web"
		},
		"helhum/typo3-console": {
			"install-extension-dummy": false
		}
	}
}
