{
	"repositories": [
		{ "type": "path", "url": "packages/*" },
		{ "type": "composer", "url": "https://composer.typo3.org/" },
		{ "type": "composer", "url": "https://packages.sudhaus7.de/" }
	],
	"name": "sudhaus7/default-sitepackage",
	"description" : "Sudhaus7 TYPO3 CMS Base Sitepackage",
	"license": "GPL-2.0-or-later",
	"config": {
		"platform": {
			"php": "7.2"
		}
	},
	"require": {
		"ext-json": "*",
		"ext-pdo": "*",
		"php": ">=7.2.0",
		"typo3-console/composer-auto-commands": "^0.1",
		"helhum/typo3-secure-web": "^0.2.5",
		"helhum/typo3-console": "^4.9.3 || ^5.2",
		"typo3/cms-about": "^8.7.10",
		"typo3/cms-belog": "^8.7.10",
		"typo3/cms-beuser": "^8.7.10",
		"typo3/cms-context-help": "^8.7.10",
		"typo3/cms-documentation": "^8.7.10",
		"typo3/cms-felogin": "^8.7.10",
		"typo3/cms-fluid-styled-content": "^8.7.10",
		"typo3/cms-form": "^8.7.10",
		"typo3/cms-func": "^8.7.10",
		"typo3/cms-impexp": "^8.7.10",
		"typo3/cms-info": "^8.7.10",
		"typo3/cms-info-pagetsconfig": "^8.7.10",
		"typo3/cms-rte-ckeditor": "^8.7.10",
		"typo3/cms-setup": "^8.7.10",
		"typo3/cms-sys-note": "^8.7.10",
		"typo3/cms-t3editor": "^8.7.10",
		"typo3/cms-tstemplate": "^8.7.10",
		"typo3/cms-viewpage": "^8.7.10",
		"typo3/cms-wizard-crpages": "^8.7.10",
		"typo3/cms-wizard-sortpages": "^8.7.10"
	},
	"require-dev": {
		"typo3-console/composer-typo3-auto-install": "dev-master",
		"nimut/testing-framework": "^4.1",
		"phpunit/phpunit": "*",
		"ichhabrecht/filefill": "^3.0",
		"christianessl/impersonate": "^1.0"
	},
	"scripts":{
		"addtrustedhostpattern": "@php vendor/bin/typo3cms configuration:set SYS/trustedHostsPattern '.*'",
		"addfilefillconfig": "@php vendor/bin/typo3cms configuration:set EXTCONF/filefill/storages/1 '[{\"identifier\":\"sys_domain\"},{\"identifier\":\"placeholder\"}]' --json",
		"killcache": "@php vendor/bin/typo3cms cache:flush",
		"generatepackagestates": "@php vendor/bin/typo3cms install:generatepackagestates",
		"extensionsetupifpossible": "@php vendor/bin/typo3cms install:extensionsetupifpossible",
		"typo3-cms-scripts": [
			"@php vendor/bin/typo3cms typo3cms install:fixfolderstructure",
		],
		"typo3install": [
			"@generatepackagestates",
			"@extensionsetupifpossible",
			"@addtrustedhostpattern",
			"@addfilefillconfig"
		],
		"post-autoload-dump": [
			"@typo3-cms-scripts"
		]
	},
	"extra": {
		"typo3/cms": {
			"web-dir": "public"
		},
		"helhum/typo3-console": {
			"comment": "This option is not needed ay more for helhum/typo3-console 5.x",
			"install-extension-dummy": false
		}
	}
}
